<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcbc83">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择操作命令"
        android:textColor="#fff"
        android:textSize="17sp"
        android:layout_margin="10dp"
        />

    <ImageView
        android:id="@+id/close_popup_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/close_icon_white_48"
        android:layout_margin="10dp"
        />

    <View
        android:id="@+id/divide_first_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_below="@+id/close_popup_iv"
        />

    <LinearLayout
        android:id="@+id/input_second_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide_first_view"
        android:visibility="visible"
        android:padding="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/title_second_input_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写表地址"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:id="@+id/first_line_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/radius_border_shape_white"
            android:orientation="horizontal"
            android:visibility="visible"
            android:padding="5dp"
            >
            <TextView
                android:id="@+id/first_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原表地址："
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/first_ed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入或选择"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:id="@+id/first_scan_iv"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:src="@mipmap/scan_black_64"
                android:layout_gravity="center"
                />
            <ImageView
                android:id="@+id/first_pulldown_iv"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:src="@mipmap/pull_down_icon_black_48"
                android:layout_gravity="center"
                />

            <!--<Spinner-->
                <!--android:id="@+id/first_line_sp"-->
                <!--android:layout_width="45dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:spinnerMode="dialog"-->
                <!--/>-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_line_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/radius_border_shape_white"
            android:orientation="horizontal"
            android:visibility="visible"
            android:padding="5dp"
            >
            <TextView
                android:id="@+id/second_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原表地址："
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/second_ed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入或选择"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:id="@+id/second_pulldown_iv"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:src="@mipmap/pull_down_icon_black_48"
                android:layout_gravity="center"
                />
